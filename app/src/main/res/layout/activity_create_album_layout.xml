<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".CreateLockedAlbumActivity">

    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/txt_sub_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:text="@string/fill_out_title"
        android:textColor="@color/light_grey"
        android:textSize="20sp" />

    <com.nikola.medialock.ui.MediaEditText
        android:id="@+id/edt_enter_name"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sub_header"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edt_background"
        android:focusable="true"
        android:gravity="center"
        android:hint="@string/name"
        android:inputType="text"
        android:maxLength="30"
        android:paddingTop="43dp"
        android:textColorHint="@color/light_grey"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/done"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />
</RelativeLayout>
